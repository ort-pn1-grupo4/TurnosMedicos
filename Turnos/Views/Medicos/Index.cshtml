@model IEnumerable<Turnos.Models.Medico>

@{
    ViewData["Title"] = "Index";
}

<section id="doctors-image" class="header-image">
    <img src="~/images/Hospital-Team.jpg" style="transform: translateY(-88px);"  alt="doctores" />
</section>

<div class="d-flex justify-content-between align-items-center my-3">
    <h1 id="imageTitle">Medicos</h1>
    <a  asp-action="Create" class="btn btn-success">
        Crear
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr class="bg-primary text-white">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                <div class="d-flex flex-row justify-content-end flex-nowrap gap-2">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdMedico">Editar</a> 
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdMedico">Detalles</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdMedico">Borrar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
