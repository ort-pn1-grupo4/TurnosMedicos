@model IEnumerable<Turnos.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<section class="header-image text-center">
    <img src="~/images/turnos.jpg" style="transform: translateY(-180px)" alt="Turnos header" />
</section>
<div class="my-4 d-flex justify-content-between align-items-center">
    <h1>Turnos</h1>
    <a class="btn btn-success" asp-action="Create">Crear nuevo</a>
</div>
<table class="table table-striped">
    <thead>
        <tr class="bg-primary text-white">
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Medico.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Apellido )
            </td>
            <td>
                <div class="d-flex flex-row justify-content-end flex-nowrap gap-2">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdTurno">Editar</a>
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdTurno">Detalle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdTurno">Borrar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
