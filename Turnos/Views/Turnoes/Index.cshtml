@model IEnumerable<Turnos.Models.Turno>

@{
    ViewData["Title"] = "Index";
}
<section class="header-image text-center">
    <img src="~/images/turnos.jpg" style="transform: translateY(-180px)" alt="Turnos header" />
</section>
<div class="my-4 d-flex justify-content-between align-items-center">
    <h1>Turnos</h1>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <div class="d-flex flex-row justify-content-end flex-nowrap gap-2">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdTurno">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdTurno">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdTurno">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
